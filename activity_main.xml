<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/mp3Cutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="160dp"
        android:onClick="mp3Cutter"
        android:text="MP3 Cutter" />

    <Button
        android:id="@+id/audioMerger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mp3Cutter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_30sdp"
        android:onClick="audioMerger"
        android:text="Audio Merger" />

    <Button
        android:id="@+id/audioMixer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp3Cutter"
        android:layout_alignStart="@+id/mp3Cutter"
        android:layout_marginTop="@dimen/_10sdp"
        android:onClick="audioMixer"
        android:text="Audio Mixer" />

    <Button
        android:id="@+id/contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp3Cutter"
        android:layout_alignEnd="@id/audioMerger"
        android:layout_marginTop="@dimen/_10sdp"
        android:onClick="contacts"
        android:text="Contacts" />

    <Button
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioMixer"
        android:layout_alignStart="@+id/mp3Cutter"
        android:layout_marginTop="@dimen/_10sdp"
        android:onClick="output"
        android:text="Output Folder" />

    <Button
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioMixer"
        android:layout_alignEnd="@+id/audioMerger"
        android:layout_marginTop="@dimen/_10sdp"
        android:onClick="music"
        android:text="Music" />
</RelativeLayout>